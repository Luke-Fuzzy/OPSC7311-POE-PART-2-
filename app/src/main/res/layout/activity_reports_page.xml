<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/reports_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Reports"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reports_heading"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/project_reports_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4B0082"
            android:text="Project Reports"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/pay_reports_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4B0082"
            android:text="Pay Reports"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/work_reports_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4B0082"
            android:text="Work Reports"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</RelativeLayout>